
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container mt-4">
    <h2>Đăng Nhập</h2>
    @using (Html.BeginForm("DangNhap", "AccountUser", FormMethod.Post))
    {
        <div class="text-danger">
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
        </div>
        <div class="mb-3">
            @Html.Label("Email", new { @class = "form-label" })
            @Html.TextBox("email", null, new { @class = "form-control", required = "required", type = "email" })
        </div>

        <div class="mb-3">
            @Html.Label("Mật khẩu", new { @class = "form-label" })
            @Html.Password("matKhau", null, new { @class = "form-control", required = "required" })
        </div>

        <button type="submit" class="btn btn-primary">Đăng Nhập</button>
    }
</div>
