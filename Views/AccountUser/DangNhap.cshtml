
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card p-4 shadow-lg" style="max-width: 400px; width: 100%;">
        <h3 class="text-center mb-4">Đăng Nhập</h3>
        @using (Html.BeginForm("DangNhap", "AccountUser", FormMethod.Post))
        {
            <div class="text-danger">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
            </div>
            <div class="mb-3">
                @Html.Label("Email", new { @class = "form-label" })
                @Html.TextBox("email", null, new { @class = "form-control", required = "required", type = "email", placeholder = "Nhập email của bạn" })
            </div>

            <div class="mb-3">
                @Html.Label("Mật khẩu", new { @class = "form-label" })
                @Html.Password("matKhau", null, new { @class = "form-control", required = "required", placeholder = "Nhập mật khẩu" })
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Đăng Nhập</button>
            </div>

            <div class="text-center mt-3">
                <a href="#" class="text-decoration-none">Quên mật khẩu?</a>
            </div>

            <div class="text-center mt-2">
                <span>Chưa có tài khoản? <a href="@Url.Action("DangKy", "AccountUser")" class="text-decoration-none">Đăng ký ngay</a></span>
            </div>
        }
    </div>
</div>
