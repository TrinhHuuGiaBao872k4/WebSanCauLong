<div class="container mt-5 d-flex justify-content-center">
    <div class="card p-4 shadow-lg" style="max-width: 500px; width: 100%;">
        <h3 class="text-center mb-4">Đăng Ký</h3>
        @using (Html.BeginForm("DangKy", "AccountUser", FormMethod.Post))
        {
            <div class="mb-3">
                @Html.LabelFor(m => m.HoTen, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control", placeholder = "Nhập họ và tên" })
                @Html.ValidationMessageFor(m => m.HoTen, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "Nhập email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.SoDienThoai, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control", placeholder = "Nhập số điện thoại" })
                @Html.ValidationMessageFor(m => m.SoDienThoai, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.MatKhau, new { @class = "form-label" })
                @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.XacNhanMatKhau, new { @class = "form-label" })
                @Html.PasswordFor(m => m.XacNhanMatKhau, new { @class = "form-control", placeholder = "Xác nhận mật khẩu" })
                @Html.ValidationMessageFor(m => m.XacNhanMatKhau, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.DiaChi, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.DiaChi, new { @class = "form-control", placeholder = "Nhập địa chỉ" })
                @Html.ValidationMessageFor(m => m.DiaChi, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.NgaySinh, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.NgaySinh, new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(m => m.NgaySinh, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.GioiTinh, new { @class = "form-label" })
                @Html.DropDownListFor(m => m.GioiTinh, new List<SelectListItem>
                {
                    new SelectListItem { Value = "Nam", Text = "Nam" },
                    new SelectListItem { Value = "Nữ", Text = "Nữ" }
                }, "Chọn giới tính", new { @class = "form-select" })
                @Html.ValidationMessageFor(m => m.GioiTinh, "", new { @class = "text-danger" })
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Đăng Ký</button>
            </div>

            <div class="text-center mt-3">
                <span>Đã có tài khoản? <a href="@Url.Action("DangNhap", "AccountUser")" class="text-decoration-none">Đăng nhập ngay</a></span>
            </div>
        }
    </div>
</div>
