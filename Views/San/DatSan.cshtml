@model WebSanCauLong.Models.ViewModels.DatSan
@{
    ViewBag.Title = "DatSan";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Đặt Sân</h2>

@using (Html.BeginForm("DatSan", "DatSan", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.SanID, "Sân Đặt:")
        @Html.TextBoxFor(m => m.SanID, new { @class = "form-control", @readonly = "readonly" })
        @Html.ValidationMessageFor(m => m.SanID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ThoiGianBatDau, "Thời Gian Bắt Đầu:")
        @Html.TextBoxFor(m => m.ThoiGianBatDau, new { @class = "form-control", type = "datetime-local", required = "required" })
        @Html.ValidationMessageFor(m => m.ThoiGianBatDau, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ThoiGianKetThuc, "Thời Gian Kết Thúc:")
        @Html.TextBoxFor(m => m.ThoiGianKetThuc, new { @class = "form-control", type = "datetime-local", required = "required" })
        @Html.ValidationMessageFor(m => m.ThoiGianKetThuc, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TongTien, "Tổng Tiền:")
        @Html.TextBoxFor(m => m.TongTien, new { @class = "form-control", @readonly = "readonly" })
        @Html.ValidationMessageFor(m => m.TongTien, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Xác Nhận Đặt Sân</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}