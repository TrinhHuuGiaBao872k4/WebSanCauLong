@model WebSanCauLong.Models.ViewModels.DatSan
@{
    ViewBag.Title = "DatSan";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Đặt Sân</h2>

@using (Html.BeginForm("DatSan", "San", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.SanID, "Sân Đặt:")
        @Html.TextBoxFor(m => m.SanID, new { @class = "form-control", @readonly = "readonly" })
        @Html.ValidationMessageFor(m => m.SanID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NgayDat, "Ngày Đặt:")
        @Html.TextBoxFor(m => m.NgayDat, new { @class = "form-control", type = "date", required = "required" })
        @Html.ValidationMessageFor(m => m.NgayDat, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.GioBatDau, "Giờ Bắt Đầu:")
        @Html.TextBoxFor(m => m.GioBatDau, new { @class = "form-control", type = "time", required = "required" })
        @Html.ValidationMessageFor(m => m.GioBatDau, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.GioKetThuc, "Giờ Kết Thúc:")
        @Html.TextBoxFor(m => m.GioKetThuc, new { @class = "form-control", type = "time", required = "required" })
        @Html.ValidationMessageFor(m => m.GioKetThuc, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TongTien, "Tổng Tiền:")
        @Html.TextBoxFor(m => m.TongTien, new { @class = "form-control", @readonly = "readonly" })
        @Html.ValidationMessageFor(m => m.TongTien, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Xác Nhận Đặt Sân</button>
}
